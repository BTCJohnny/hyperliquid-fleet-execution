# .env.example - Template for environment configuration
# Copy this file to .env and replace placeholders with your actual values

# --- WALLET PRIVATE KEYS ---
# IMPORTANT: Never commit your actual .env file with real keys!

# HL_SentientGuard wallet private key
PRIVATE_KEY_SENTIENT=YOUR_SENTIENT_WALLET_PRIVATE_KEY_HERE

# HL_Apprentice Alchemist wallet private key
PRIVATE_KEY_ALCHEMIST=YOUR_ALCHEMIST_WALLET_PRIVATE_KEY_HERE

# HL_Alpha wallet private key
PRIVATE_KEY_ALPHA=YOUR_ALPHA_WALLET_PRIVATE_KEY_HERE

# --- RISK MANAGEMENT SETTINGS ---

# Default "Catastrophic" Stop Loss distance (e.g., 0.05 = 5% price drop)
DEFAULT_SL_DIST=0.05

# Max allowed leverage (e.g., 5.0).
# The bot will reduce position size if the calc requires higher leverage.
MAX_LEVERAGE=1.0

# Percentage of Account Equity to risk per trade (0.02 = 2%)
# If the Stop Loss hits, you lose roughly this % of your total money.
RISK_PER_TRADE=0.02

# Maximum concurrent open positions per wallet (safety limit)
# Prevents overexposure. New entry signals will be skipped if this limit is reached.
MAX_CONCURRENT_POSITIONS=3

# Enable breakeven stop loss after TP1 hit
# When TP1 fills, automatically moves stop loss to entry price (breakeven)
ENABLE_BREAKEVEN_SL=True

# Network selection
# Set to False for testnet, True for mainnet
IS_MAINNET=False
